<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#F1C5D4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:text="˚₊‧ ୨୧ ‧₊˚BIYA SALON STUDIO˚₊‧ ୨୧ ‧₊˚"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="#EC7AA0"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tvIg"
        android:text="ig: biyaastudio_"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="#CA7F98"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="Choose Service:"
        android:textSize="17sp"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:textStyle="bold"
        android:textColor="#E3EBEF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/serviceRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/hairTreatmentRadioButton"
            android:text="Hair Treatment               Rp50.000"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#BA295A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/pedicureRadioButton"
            android:text="Pedicure                         Rp80.000"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="#BA295A"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <RadioButton
            android:id="@+id/manicureRadioButton"
            android:text="Manicure                       Rp100.000"
            android:textColor="#BA295A"
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioButton
            android:id="@+id/facialRadioButton"
            android:text="Facial                             Rp60.000"
            android:textColor="#BA295A"
            android:textStyle="normal"
            android:textSize="15sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </RadioGroup>

    <TextView
        android:text="Choose Membership:"
        android:layout_marginLeft="@android:dimen/app_icon_size"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="#E3EBEF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <RadioGroup
        android:id="@+id/membershipRadioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/platinumRadioButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Platinum"
            android:textColor="#EC789F" />

        <RadioButton
            android:id="@+id/goldRadioButton"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:text="Gold"
            android:textColor="#EC789F" />

        <RadioButton
            android:id="@+id/silverRadioButton"
            android:layout_width="132dp"
            android:layout_height="wrap_content"
            android:text="Silver"
            android:textColor="#EC789F" />

    </RadioGroup>

    <Button
        android:id="@+id/calculateButton"
        android:text="Total"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/totalTextView"
        android:text="pricelist:"
        android:textSize="18sp"
        android:textColor="#8050D5"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>
